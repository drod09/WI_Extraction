public class WiPayload
{
    // Slide 1 - Title + 4 tables
    public string Title { get; set; }
    public string WiNumber { get; set; }
    public string IPE { get; set; }
    public string ER { get; set; }
    public string ECO { get; set; }

    // Tables unique to Slide 1
    public System.Data.DataTable BomConfiguration { get; set; }   // “BOM/CONFIGURATION”
    public System.Data.DataTable RevisionHistory { get; set; }    // “REVISION HISTORY”
    public System.Data.DataTable Drafting { get; set; }           // “DRAFTING”
    public System.Data.DataTable Approvals { get; set; }          // “APPROVALS”

    // Slide 2 - Parts & Equipment (as tables)
    public System.Data.DataTable EquipmentRequired { get; set; }  // “EQUIPMENT REQUIRED”
    public System.Data.DataTable PartsRequired { get; set; }      // “PARTS REQUIRED”

    // Slide 3 - Accept Good Checklist
    public System.Collections.Generic.List<string> AcceptGoodChecklist { get; set; } = new();

    // Slide 4 - Exploded View / Reference image
    public string ReferenceImagePath { get; set; }

    // Slide 5+ - Procedures (generic content)
    public class ProcedureStep
    {
        public string Heading { get; set; }
        public System.Collections.Generic.List<string> Lines { get; set; } = new();
        public System.Collections.Generic.List<string> ImagePaths { get; set; } = new();
        public System.Collections.Generic.List<System.Data.DataTable> Tables { get; set; } = new();
    }
    public System.Collections.Generic.List<ProcedureStep> Procedures { get; set; } = new();

    // Slide 6 - Pass Good Checklist
    public System.Collections.Generic.List<string> PassGoodChecklist { get; set; } = new();

    // Slide 7 - Training Log (table)
    public System.Data.DataTable TrainingLog { get; set; }
}