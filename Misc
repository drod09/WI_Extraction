// --- DataTable extension ---
private static DataTable CopyToDataTableOrEmpty(this IEnumerable<DataRow> rows)
{
    var list = rows?.ToList() ?? new List<DataRow>();
    if (list.Count == 0)
        return new DataTable();
    return list.CopyToDataTable();
}


var sorted = dt.AsEnumerable()
    .OrderBy(r => SafeInt(r["RowOrder"]))
    .CopyToDataTableOrEmpty();