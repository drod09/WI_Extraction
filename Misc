private static void DebugDumpSlide1Tables(PresentationDocument doc)
{
    var s1 = GetSlideByIndex(doc, 1);
    var tables = s1.Slide.Descendants<A.Table>().ToList();
    Console.WriteLine($"[Slide1] Found {tables.Count} tables.");
    int idx = 1;
    foreach (var t in tables)
    {
        var title = GetTableTitle(t);
        var rows  = t.Elements<A.TableRow>().Count();
        var cols  = t.Elements<A.TableRow>().FirstOrDefault()?.Elements<A.TableCell>().Count() ?? 0;
        Console.WriteLine($"  {idx}: Title='{title}' Rows={rows} Cols={cols}");
        idx++;
    }
}





using var doc = PresentationDocument.Open(outPptx, true);
DebugDumpSlide1Tables(doc);